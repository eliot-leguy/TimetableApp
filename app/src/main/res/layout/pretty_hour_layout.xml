<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/lightGray">

    <TextView
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:id="@+id/timeTV"
        android:background="@color/white"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="10:00"/>

    </LinearLayout>

    <LinearLayout
        android:background="@color/lightGray"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:id="@+id/event1"
        android:padding="5dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_weight=".95"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/event1Module"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Module"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/event1Room"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Room"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/event1Prof"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Prof"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/event1Group"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:text="Group"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/event1Note"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Note"/>


    </LinearLayout>

    <LinearLayout
        android:background="@color/lightGray"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_toStartOf="@id/event1"
        android:id="@+id/event2"
        android:padding="5dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_weight=".95"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/event2Module"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Module"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/event2Room"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Room"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/event2Prof"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Prof"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/event2Group"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:text="Group"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/event2Note"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Note"/>
        
    </LinearLayout>
    
    <LinearLayout
    android:background="@color/lightGray"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:layout_toStartOf="@id/event2"
    android:id="@+id/event3"
    android:padding="5dp">
    
    
    <TextView
        android:layout_width="match_parent"
        android:layout_weight=".95"
        android:layout_margin="5dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/event3Module"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Module"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/event3Room"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="Room"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/event3Prof"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="Prof"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/event3Group"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:text="Group"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/event3Note"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="Note"/>
    
    
    </LinearLayout>

    <LinearLayout
        android:background="@color/lightGray"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_marginLeft="70dp"
        android:layout_toStartOf="@id/event3"
        android:id="@+id/event4"
        android:padding="5dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_weight=".95"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/event4Module"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Module"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/event4Room"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Room"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/event4Prof"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Prof"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/event4Group"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:text="Group"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/event4Note"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Note"/>


    </LinearLayout>
    



    </RelativeLayout>

